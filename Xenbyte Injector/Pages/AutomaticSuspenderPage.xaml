<Page x:Class="Xenbyte_Injector.Pages.AutomaticSuspenderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Xenbyte_Injector.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutomaticSuspenderPage" FontSize="11">

    <Grid>
        <TextBlock Margin="5,5,5,5" Text="Process Name: " Background="#FF1C1E26" Foreground="#FFE95378"/>
        <TextBox x:Name="processNameTextBox" Margin="105,5,5,5" Height="20" TextWrapping="Wrap" VerticalAlignment="Top"  Background="#FF1C1E26" Foreground="#FFE95378" HorizontalContentAlignment="Center"/>
        <TextBlock Margin="5,30,5,5" Text="Delay (ms): "  Background="#FF1C1E26" Foreground="#FFE95378"/>
        <TextBox x:Name="delayTextBox" Margin="105,30,5,5" Height="20" Text="1000" TextWrapping="Wrap" VerticalAlignment="Top" Background="#FF1C1E26" Foreground="#FFE95378" HorizontalContentAlignment="Center"/>
        <CheckBox x:Name="autoSuspendCheckBox" Margin="0,0,5,5" Content="Automatic Suspend" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="#FFE95378" Checked="autoSuspendCheckBox_Checked" Unchecked="autoSuspendCheckBox_Unchecked" />
    </Grid>
</Page>
